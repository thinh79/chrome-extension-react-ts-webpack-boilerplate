{
  "compilerOptions": {
    "types": ["chrome"],
    "target": "es6",
    "module": "esnext",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "jsx": "react",
    "outDir": "./dist",
    "rootDir": "./src",
    "removeComments": true,
    "noEmitOnError": true,
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "strictNullChecks": true,
    "baseUrl": "./", // This must be set if "paths" is set.
    "paths": {
      "@/*": ["src/*"] // Same mapping as in webpack.config.js
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}
